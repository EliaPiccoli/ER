<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Help" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane fx:id="mainAnchor" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Label alignment="CENTER" layoutX="155.0" layoutY="184.0" style="&#10;" text="Password" textAlignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label layoutX="155.0" layoutY="107.0" text="Username">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField id="userField" fx:id="userField" layoutX="284.0" layoutY="102.0" promptText="username" />
            <PasswordField id="passField" fx:id="passField" layoutX="284.0" layoutY="182.0" promptText="password" />
            <Button fx:id="loginButton" layoutX="366.0" layoutY="265.0" mnemonicParsing="false" onAction="#login" prefHeight="27.0" prefWidth="103.0" text="Login">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="logoutButton" visible="false" layoutX="226.0" layoutY="265.0" mnemonicParsing="false" onAction="#logout" prefHeight="27.0" prefWidth="103.0" text="Logout">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            </children>
        </AnchorPane>
    </children>
</VBox>
